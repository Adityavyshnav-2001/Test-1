
{%- doc -%}
  This block is used to display the buy now button.
  Intended for product-form.liquid / buy-buttons.liquid block.

  @param {string} can_add_to_cart - Whether the product can be added to the cart
{%- enddoc -%}

{% liquid
  assign class = 'buy-now-button ' | append: block.settings.style_class
  assign id = 'BuyButtons-BuyNowButton-' | append: block.id
%}

<span
  {{ block.shopify_attributes }}
>
  {% render 'buy-now-button',
    id: id,
    class: class,
    can_add_to_cart: can_add_to_cart,
    product: closest.product
  %}
</span>

{% schema %}
{
  "name": "t:names.buy_now",
  "tag": null,
  "settings": [
    {
      "type": "select",
      "id": "style_class",
      "label": "t:settings.style",
      "options": [
        {
          "value": "button",
          "label": "t:options.primary"
        },
        {
          "value": "button-secondary",
          "label": "t:options.secondary"
        }
      ],
      "default": "button-secondary"
    }
  ]
}
{% endschema %}
